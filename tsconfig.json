{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowImportingTsExtensions": true,
    "declaration": true,  // Ensure declaration files are generated
    "emitDeclarationOnly": true,  // Only emit declaration files
    "outDir": "./dist",  // Output directory for generated files
    "rootDir": "./src",  // Root directory of input files
    "composite": true,  // Enable for project references
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",  // Build info file for incremental builds
    // Add other necessary compiler options here
  },
  "include": ["./types/**/*.ts", "./src/**/*.ts", "./src/router/**/*.ts", "./src/stores/**/*.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.vitest.json"
    }
  ]
}